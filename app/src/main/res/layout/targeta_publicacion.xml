<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#99FFFF">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:shrinkColumns="0">

        <TableRow android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_targeta_titulo"
                android:textSize="30sp"
                android:textAlignment="textStart"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_targeta_fec_publicacion"
                android:gravity="center"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txt_targeta_autor"
                android:minLines="2"
                android:textSize="20sp"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/txt_targeta_comentarios"
                android:textSize="20sp"
                android:textStyle="italic"
                android:gravity="center"/>
        </TableRow>

        <Button
            android:id="@+id/btn_targeta_publicacion"
            android:layout_height="wrap_content"
            android:text="@string/btn_buscar"/>

    </TableLayout>

</androidx.cardview.widget.CardView>